- name: Tenant
  vip: false  # Tenant network does not use VIPs
  name_lower: tenant_cloud_{{ item }}
  service_net_map_replace: tenant
  vlan: {{ item }}4
  ip_subnet: '172.16.{{ item }}4.0/24'
  allocation_pools: [{'start': '172.16.{{ item }}4.4', 'end': '172.16.{{ item }}4.250'}]
  # Note that tenant tunneling is only compatible with IPv4 addressing at this time.
  ipv6_subnet: 'fd00:fd00:fd00:{{ item }}004::/64'
  ipv6_allocation_pools: [{'start': 'fd00:fd00:fd00:{{ item }}004::10', 'end': 'fd00:fd00:fd00:{{ item }}004:ffff:ffff:ffff:fffe'}]
- name: External
  vip: true
  name_lower: external_cloud_{{ item }}
  service_net_map_replace: external
  vlan: 11
  ip_subnet: '10.0.1{{ item }}.0/24'
  allocation_pools: [{'start': '10.0.1{{ item }}.4', 'end': '10.0.1{{ item }}.250'}]
  gateway_ip: '10.0.1{{ item }}.1'
  ipv6_subnet: '2001:db8:fd00:1{{ item }}00::/64'
  ipv6_allocation_pools: [{'start': '2001:db8:fd00:1{{ item }}00::10', 'end': '2001:db8:fd00:1{{ item }}00:ffff:ffff:ffff:fffe'}]
  gateway_ipv6: '2001:db8:fd00:1{{ item }}00::1'
- name: Management
  # Management network is enabled by default for backwards-compatibility, but
  # is not included in any roles by default. Add to role definitions to use.
  enabled: true
  vip: false  # Management network does not use VIPs
  name_lower: management_cloud_{{ item }}
  service_net_map_replace: management
  vlan: 61
  ip_subnet: '10.0.2{{ item }}.0/24'
  allocation_pools: [{'start': '10.0.2{{ item }}.4', 'end': '10.0.2{{ item }}.250'}]
  ipv6_subnet: 'fd00:fd00:fd00:{{ item }}005::/64'
  ipv6_allocation_pools: [{'start': 'fd00:fd00:fd00:{{ item }}005::10', 'end': 'fd00:fd00:fd00:{{ item }}005:ffff:ffff:ffff:fffe'}]
