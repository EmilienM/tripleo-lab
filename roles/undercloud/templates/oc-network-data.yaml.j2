- name: Storage
  vip: true
  vlan: {{ item }}1
  name_lower: storage_cloud_{{ item }}
  service_net_map_replace: storage
  ip_subnet: '172.16.{{ item }}1.0/24'
  allocation_pools: [{'start': '172.16.{{ item }}1.4', 'end': '172.16.{{ item }}1.250'}]
  ipv6_subnet: 'fd00:fd00:fd00:{{ item }}001::/64'
  ipv6_allocation_pools: [{'start': 'fd00:fd00:fd00:{{ item }}001::10', 'end': 'fd00:fd00:fd00:{{ item }}001:ffff:ffff:ffff:fffe'}]
