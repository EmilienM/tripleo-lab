{
  "nodes": [
{% for node in vms %}
    {
      "name": "{{node.name}}",
      "pm_type": "ipmi",
      "ports": [
        {
          "address": "{{node.interfaces[0].mac}}"
        }
      ],
      "pm_user": "ADMIN",
      "pm_password": "ADMIN",
      "pm_addr": "192.168.122.1:112{{node.interfaces.0.mac|replace('24:42:53:21:52:','')}}",
      "properties": {
        "capabilities": "node:{{node.name}},boot_option:local"
      }
    }{% if not loop.last %}, {% endif %}

{% endfor %}
  ]
}
